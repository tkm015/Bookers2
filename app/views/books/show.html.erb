<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h2>User info</h2>

<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    <table>
      <tbody>
        <tr>
          <td>name</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>introduction</td>
          <td><%= @user.introduction %></td>
        </tr>
      </tbody>
    </table>
<%= link_to "編集",edit_user_path(current_user.id) %>

<h2>New book</h2>
<%= form_for(@books,url: '/books') do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %>
    <br>
      <%= f.submit 'Create Book' %>
<% end %>

<h2>Book detail</h2>
  <table>
   <tbody>
  	<tr>
      <th><%= attachment_image_tag current_user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %><br>
        <%= link_to "#{@user.name}",user_path(@user.id) %></th>
      <th><%= link_to "#{@book.title}",book_path(@book.id) %></th>
      <th><%= @book.body %></th>
    <% if @user == current_user %>
      <th><%= link_to "Edit",edit_book_path(@book.id) %></th>
      <th><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' }%></th>
    <% end %>
  </tbody>
  </table>
