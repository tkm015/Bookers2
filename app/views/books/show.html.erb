<h2>User info</h2>


<h2>Book detail</h2>

  <table>
  	<tr>
      <th><%= @book.title %></th>
      <th><%= @book.body %></th>

      <th><%= link_to "Edit",edit_book_path(@book.id) %></th>
      <th><%= link_to "Destroy", url:'/books/#{@book.id}', method: :delete, data: { confirm: '本当に削除しますか？' } %>
     
    </tr>
  </table>


<h2>New book</h2>
<%= form_for(@books,url: '/books') do |f| %>
    <p>Title</p>
      <%= f.text_field :title %>
    <p>Opinion</p>
      <%= f.text_area :body %>
    <br>
      <%= f.submit 'Create Book' %>
<% end %>