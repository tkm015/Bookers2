<div class="container">
<div class="row">
	<% if @book.errors.any? %>
    <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
<% end %>
	<div class="col-md-offset-3 col-md-5">
<h1>Editing Book</h1>
<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title,class: "form-control" %>
    <h4>Opinion</h4>
    <%= f.text_area :body,class: "form-control" %><br>
    <%= f.submit 'Update Book',class: "btn btn-primary btn-block " %>
    <%= link_to "Show",book_path(@book.id) %>
    <%= link_to "Back",books_path %>
<% end %>
</div>
</div>
</div>
