<div class="container"> 
  <% if @user.errors.any? %>
    <p><%= @user.errors.count %>errors prohibited this book from being saved:</p>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
<% end %>

<h2>User info</h2>

<%= form_for(@user, url: user_path(@user.id), method: :patch) do |f| %>
<div class="row">
  <div class="col-xs-1">
    <p>Name</p>
  </div>
  <div class="col-xs-4">
    <%= f.text_field :name %>
  </div>
</div>
  <p>Image</p>
    <%= f.attachment_field :profile_image %>
      <br>
<div class="row">
  <div class="col-xs-1">
    <p>Intoroduction</p>
  </div>
  <div class="col-xs-3">
    <%= f.text_area :introduction %>
  </div>
      <br>
</div>
  <%= f.submit "Update User" %>
<% end %>
</div>
