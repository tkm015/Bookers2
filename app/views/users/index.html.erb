<div class="container"> 
  <div class="row">

<div class="col-xs-3">
<h2>User info</h2>

<%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
        <tr>
          <td>name</td>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <td>introduction</td>
          <td><%= current_user.introduction %></td>
        </tr>
      </tbody>
    </table>
<%= link_to "",edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>


<h2>New book</h2>
<%= form_for(@book,url: '/books') do |f| %>
    <p>Title</p>
      <%= f.text_field :title,class: "form-control" %>
    <p>Opinion</p>
      <%= f.text_area :body,class: "form-control" %>
    <br>
      <%= f.submit 'Create Book',class: "btn btn-primary btn-block" %>
<% end %>
</div>
<div class="col-xs-9">
<h2>Users</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
    </thead>
<% @users.each do |user| %>
    <tbody>
  	  <tr>
        <th><%= attachment_image_tag current_user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg" %></th>
        <th><%= user.name %></th>
        <th><%= link_to "Show",user_path(user.id) %></th>
      </tr>
    </tbody>
<% end %>
  </table>
</div>
</div>
</div>



